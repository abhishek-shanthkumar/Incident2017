<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="12dp"
    android:background="@android:color/transparent"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_slamdunk"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardCornerRadius="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/container_team1"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:background="#807360">

                <TextView
                    android:id="@+id/tv_name_team1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="#32FFFFFF"
                    android:gravity="center_horizontal"
                    android:padding="8dp"
                    android:text="NITK"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_score_team1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tv_name_team1"
                    android:gravity="center"
                    android:text="22"
                    android:textColor="#FFFFFF"
                    android:textSize="50sp" />
            </RelativeLayout>

            <View
                android:id="@+id/divider_1"
                android:layout_width="2dp"
                android:layout_height="180dp"
                android:layout_toRightOf="@+id/container_team1"
                android:background="#FFFFFF" />

            <RelativeLayout
                android:id="@+id/container_team2"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_toRightOf="@+id/divider_1"
                android:background="#807360">

                <TextView
                    android:id="@+id/tv_name_team2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="#32FFFFFF"
                    android:gravity="center_horizontal"
                    android:padding="8dp"
                    android:text="MIT"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_score_team2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tv_name_team2"
                    android:gravity="center"
                    android:text="20"
                    android:textColor="#FFFFFF"
                    android:textSize="50sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_quarter_title"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/container_team1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:text="QUARTER"
                android:textColor="#96000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_quarter"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_quarter_title"
                android:background="#FFFFFF"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="03"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_match_result"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_quarter"
                android:background="#F2F2F2"
                android:gravity="center"
                android:padding="12dp"
                android:text="GAME IN PROGRESS"
                android:textColor="#afd82b42"
                android:textSize="18sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>