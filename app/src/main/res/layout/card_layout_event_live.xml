<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ColorPrimary"
    android:orientation="vertical">

    <View
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="#D82B42" />

    <TextView
        android:id="@+id/tv_live_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:paddingLeft="8dp"
        android:text="Happening Now"
        android:textColor="#D82B42"
        android:alpha="0.8"
        android:textSize="18sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_live_events"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DACCB9"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Events"
                android:layout_alignParentLeft="true"
                android:textColor="#D82B42"
                android:textSize="30sp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/nestaway"
                android:clickable="true"
                android:paddingTop="15dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/nestaway_c"/>


        </RelativeLayout>
        <View
            android:layout_width="32dp"
            android:layout_height="4dp"
            android:layout_marginBottom="8dp"
            android:background="#D82B42" />
    </LinearLayout>


</LinearLayout>